generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model City {
  id        Int        @id @default(autoincrement())
  name      String     @unique
  locations Location[]
  createdAt DateTime   @default(now())
}

model Location {
  id        Int      @id @default(autoincrement())
  name      String
  cityId    Int
  city      City     @relation(fields: [cityId], references: [id])
  createdAt DateTime @default(now())


  @@unique([name, cityId], name: "name_cityId")
}
